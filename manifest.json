{
  "manifest_version": 3,
  "name": "Genesys Unified Master",
  "version": "7.1",
  "description": "Suite completa: Monitoramento, IA, Base de Conhecimento e Produtividade.",
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "notifications"
  ],
  "host_permissions": [
    "https://*.mypurecloud.com/*",
    "https://*.mypurecloud.ie/*",
    "https://*.mypurecloud.de/*",
    "https://*.mypurecloud.jp/*",
    "https://*.mypurecloud.com.au/*",
    "https://*.genesys.cloud/*",
    "https://*.pure.cloud/*",
    "https://*.brisanet.com.br/*",
    "https://script.google.com/*",
    "https://api.github.com/*",
    "https://scriptgenesys-code.github.io/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Painel de Gest√£o"
  },
  "options_page": "admin.html",
  "content_scripts": [
    {
      "matches": [
        "https://*.mypurecloud.com/*",
        "https://*.mypurecloud.ie/*",
        "https://*.mypurecloud.de/*",
        "https://*.mypurecloud.jp/*",
        "https://*.mypurecloud.com.au/*",
        "https://*.genesys.cloud/*",
        "https://*.pure.cloud/*",
        "https://*.brisanet.com.br/*"
      ],
      "js": [
        "compatibility.js",
        "bar.js",
        "extrator.js",
        "protocolos.js",
        "respostas.js",
        "pausas.js",
        "cronometros.js",
        "ia.js",
        "monitor.js",
        "central.js",
        "menu.js",
        "gerente.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "admin.html",
        "style.css",
        "compatibility.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
